
<%= form_with model:@designation do  |f| %>
 
  <div class="mb-3">
    <%= f.label :name, style: "display: block", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <div style="color: red">
      <% if @designation.errors.include?(:name) %>
          <% @designation.errors.full_messages_for(:name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :description, style: "display: block", class: "form-label" %>
    <%= f.text_field :description, class: "form-control" %>
    <div style="color: red">
      <% if @designation.errors.include?(:name) %>
          <% @designation.errors.full_messages_for(:description).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

<div class="actions">
  <%= f.submit "Save",class: "save-button" %>
</div> 
<% end %>
