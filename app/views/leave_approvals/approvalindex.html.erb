<div class="designation-main-cont">
<%= render "manager/managermenu" %>
<div class="attendance-main-cont">

  <% @leaveapprovals.each do |lv| %>
    <div class="leaveapproval">
    <div><p><span style="color:#608fd1;font-weight:bold">Employee Id: </span> <%= lv.employee_id%></p></div>
    <div><p><span style="color:#608fd1;font-weight:bold">Start Date: </span> <%= lv.start_date.to_date%></p></div>
    <div><p><span style="color:#608fd1;font-weight:bold">End Date: </span> <%= lv.end_date.to_date%></p></div>
    <div><p><span style="color:#608fd1;font-weight:bold">Reason : </span> <%= lv.reason%></p></div>
    <div><p><span style="color:#608fd1;font-weight:bold">Status : </span> <%= lv.status%></p></div>
    <div class="bottom-cont1"> 
    <%= button_to  "Approve Leave",edit_employee_leafe_path(lv),method: :get, class: "btn btn-primary",data: { turbo_frame: "remote_modal" }%>
    <%= button_to  "Decline Leave",employee_leafe_path(lv),method: :delete, class: "btn btn-danger"%>
    </div>  
    </div>
  <% end %>


</div>
</div>


