<div class="formmaincont">

<%= form_with model: @employee_leave do |f| %>
  
      <div class="field-form">
        <%= f.label :leave_id, "Leave Id"%><br />
        <%= f.select :leave_id, Leave.all.collect{|leave| [leave.name,leave.id]} %>
      </div>

      

      <div class="field-form">
        <%= f.label :start_date%><br />
        <%= f.date_field :start_date, autofocus: true, autocomplete: "start_date" %>
      </div>

      <div class="field-form">
        <%= f.label :end_date %><br />
        <%= f.date_field :end_date, autofocus: true, autocomplete: "end_date" %>
      </div>

      <div class="field-form">
        <%= f.label :confirmed_by %><br />
        <%= f.text_field :confirmed_by, autofocus: true, autocomplete: "confirmed_by" %>
      </div>

      <div class="field-form">
        <%= f.label :status  %><br />
        <%= f.text_field :status, autofocus: true, autocomplete: "status" %>
      </div>

      <div class="field-form">
        <%= f.label :reason %><br />
        <%= f.text_area :reason, autofocus: true, autocomplete: "reason" %>
      </div>

  <div class="actions ">
    <%= f.submit "Add",class: "save-button" %>
  </div>
<% end %>

</div>