
<%= form_with model:@project do  |f| %>

  <div class="mb-3">
    <%= f.label :name, style: "display: block", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <div style="color: red">
      <% if @project.errors.include?(:name) %>
          <% @project.errors.full_messages_for(:name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :description, style: "display: block", class: "form-label" %>
    <%= f.text_field :description, class: "form-control" %>
    <div style="color: red">
      <% if @project.errors.include?(:description) %>
          <% @project.errors.full_messages_for(:description).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :manager_id, style: "display: block", class: "form-label" %>
    <%= f.text_field :manager_id, class: "form-control" %>
    <div style="color: red">
      <% if @project.errors.include?(:manager_id) %>
          <% @project.errors.full_messages_for(:manager_id).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :project_lead_id, style: "display: block", class: "form-label" %>
    <%= f.text_field :project_lead_id, class: "form-control" %>
    <div style="color: red">
      <% if @project.errors.include?(:project_lead_id) %>
          <% @project.errors.full_messages_for(:project_lead_id).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>
  
<div class="actions">
  <%= f.submit "Save",class: "save-button" %>
</div> 
<% end %>
