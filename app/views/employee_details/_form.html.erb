<%= form_with model:@employee_detail, remote: true do  |f| %>

  <div class="mb-3">
  <%= f.label :contact_no, style: "display: block", class: "form-label" %>
  <%= f.text_field :contact_no, class: "form-control" %>
  <div style="color: red">
    <% if @employee_detail.errors.include?(:contact_no) %>
        <% @employee_detail.errors.full_messages_for(:contact_no).each do |error_message| %>
          <%= error_message %>.
        <% end %>
    <% end %>
  </div>
</div>

