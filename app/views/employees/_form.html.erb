
<%= form_with model: @employee, remote: true, local: true do |f| %>
  
  <div class="mb-3">
    <%= f.label :first_name, style: "display: block", class: "form-label" %>
    <%= f.text_field :first_name, class: "form-control" %>
    <div style="color: red">
      <% if @employee.errors.include?(:first_name) %>
          <% @employee.errors.full_messages_for(:first_name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :last_name, style: "display: block", class: "form-label" %>
    <%= f.text_field :last_name, class: "form-control" %>
    <div style="color: red">
      <% if @employee.errors.include?(:last_name) %>
          <% @employee.errors.full_messages_for(:last_name).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :email, style: "display: block", class: "form-label" %>
    <%= f.text_field :email, class: "form-control" %>
    <div style="color: red">
      <% if @employee.errors.include?(:email) %>
          <% @employee.errors.full_messages_for(:email).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :employee_unique_id, style: "display: block", class: "form-label" %>
    <%= f.text_field :employee_unique_id, class: "form-control" %>
    <div style="color: red">
      <% if @employee.errors.include?(:employee_unique_id) %>
          <% @employee.errors.full_messages_for(:employee_unique_id).each do |error_message| %>
            <%= error_message %>.
          <% end %>
      <% end %>
    </div>
  </div>

  
  <div class="field-form">
    <%= f.label :role_id, "Role Id" %><br />
    <%= f.select :role_id, Role.all.collect{|role| [role.name,role.id]} %>
  </div>

  <div class="field-form">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field-form">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div> <br />

  <div class="actions admin-add-cancel-buttons-container">
    <%= f.submit class: "btn btn-primary f-submit-buttons" %>
    <%= link_to "Cancel", employees_path, class: "btn btn-danger", method: :get %>
  </div>
<% end %>
